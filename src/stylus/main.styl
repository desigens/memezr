body {
    font-family: Helvetica, sans-serif;
    padding: 20px 0 50px;
    background-image: radial-gradient(50% 100%, #444444 0%, #222222 100%);
}

* {
    margin: 0;
    padding: 0;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -o-user-select: none;
    user-select: none;    
}

header {
    color: #fff;
    padding: 20px;
}

header i {
    font-size: 120%;
    color: #999;
}

#container:before {
  content: '';
  color: #00C5FF;
  position: absolute;
  top: -3em;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 2;
  font-size: 12px;
}

#container {
    position: relative;
    margin: 0 auto;
}

.edit#container canvas {
    opacity: 0.5;
}
.edit#container:before {
    content: 'Как закончите — там внизу будет кнопка.';
}

.bubbles {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.text {
    -webkit-font-smoothing: antialiased;
    box-sizing: border-box;
    outline: 2px #00C5FF solid;
    
    margin-top: -.8em;

    padding-bottom: .2em;
    text-shadow: 0 0 10px #000;
    width: 100%;
    display: none;
    min-height: 40px;

    padding-left: .02em;
}

.text .Impact {
    margin-top: -.10em;
    padding-right: .16em;
}
.text .Times {
    /*TODO correct for Firefox*/
    margin-top: -0.02em;
    padding-right: .24em;
}
.text .Arial {
    margin-top: -0.04em;
    padding-right: .26em;
}

.text div {
	outline: none;
    margin: 0 10px;
    -webkit-user-select: text;
    -moz-user-select: text;
    -ms-user-select: text;
    -o-user-select: text;
    user-select: text; 
}

.edit .text {
	display: block;
}

.handler {
    position: absolute;
    left: 100%;
    top: 0;
    width: 10px;
    height: 100%;
    background: #00C5FF;
    outline: 2px #00C5FF solid;
    font-size: 16px;
    line-height: 16px;
    cursor: pointer;
    text-align: center;
    font-family: Arial !important;

    word-wrap: break-word;
    line-height: 4px;
    color: ;
}
.handler i {
	font-style: normal;
	text-shadow: none;
	display: inline-block;
}

.plus,
.minus {
    top: 0;
    position: absolute;
    left: 100%;
    margin-left: 5px;
    transition: all .3s ease;
    line-height: 17px !important;
    border: none;
	height: 19px;
	width: 19px;
	background-image: linear-gradient(-180deg, #FFFFFF 0%, #727272 100%);
	border-radius: 38px;
	font-family: HelveticaNeue;
	font-size: 14.82px;
	color: #000000;
    text-align: center;
}
.minus {
    top: 22px;
}

.plus:hover,
.minus:hover {
    background-image: linear-gradient(-180deg, #FFFFFF 0%, #00C5FF 100%);
	
}

.remove {
    position: absolute;
    left: 100%;
    top: -10px;
    width: 1em;
    line-height: 5px;
    margin-left: 110px;
}
.remove:hover {
    color: #F75100;
}

.left,
.right,
.center {
    position: absolute;
    left: 100%;
    top: 25px;
    width: 1em;
    line-height: 5px;
}
.left:before,
.center:before,
.right:before {
    content: '— - –';
}
.left {
    text-align: left;
    margin-left: 35px;
}
.center {
    text-align: center;
    margin-left: 65px;
}
.right {
    text-align: right;
    margin-left: 95px;
}
.selected {
    color: #00C5FF;
}
select {
    width: 7em;
    position: absolute;
    left: 100%;
    margin-left: 35px;
    top: 0;
}
.bottom {
    text-align: center;
    color: #fff;
}
.bottom p {
    font-style: italic;
    line-height: 72px;
    font-size: 12px;
}
#download {
    display: none; 
}
#done {
    display: none; 
}

a {
    /* Rectangle 16: */
    background-image: linear-gradient(-180deg, #FFFFFF 0%, #727272 100%);
    box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.50);
    border-radius: 4px;
    /* Скачать картинку: */
    font-family: HelveticaNeue;
    font-size: 13px;
    color: #000000;
    line-height: 30px;
    height: 30px;
    border: none;
    padding: 0 20px;
    display: inline-block;
    cursor: pointer;
    text-decoration: none;
}
a:hover {
    background-image: linear-gradient(-180deg, #FFFFFF 0%, #00C5FF 100%);
}
a:active {
    background-image: linear-gradient(-180deg, #00C5FF 0%, #00C5FF 100%);
}

.add {
    opacity: .5;
    position: absolute;
    right: 5px;
    top: 5px;
    border: 1px #fff solid;
    width: 20px;
    height: 20px;
    color: #fff;
    border-radius: 50%;
    text-align: center;
    font-style: normal;
    line-height: 20px;
    cursor: default;
}
.add:hover {
    opacity: 1;
}